<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/article_card_view"
    app:cardMaxElevation="5dp"
    card_view:cardUseCompatPadding="true"
    android:layout_marginTop="2dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Article Title"
            android:textSize="18sp"
            android:fontFamily="sans-serif-black"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/article_cardview_title"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date Published"
            android:textSize="14sp"
            android:fontFamily="sans-serif-black"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/article_cardview_title"
            android:id="@+id/article_cardview_description"
            />

        <TextView
            android:id="@+id/article_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/article_cardview_description"
            android:text="Author name"
            android:fontFamily="sans-serif-black"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_below="@id/article_cardview_title"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>